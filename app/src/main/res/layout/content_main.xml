<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pacman29.testalarm.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/update_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Did you set the alarm?"
        android:layout_below="@+id/timePicker"
        android:layout_centerHorizontal="true" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/alarm_on"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:autoText="false"
        android:gravity="center"
        android:padding="10dp"
        android:text="Turn on alarm"
        tools:clickable="true"
        android:layout_below="@+id/update_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/alarm_off"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/alarm_on"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Turn off alarm"
        tools:clickable="true" />

    <Spinner
        android:id="@+id/richard_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_on"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

</RelativeLayout>
